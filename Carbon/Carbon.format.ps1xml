						    </TableColumnItem>
						    <TableColumnItem>
							    <ScriptBlock>$_.Context.ConnectedServer</ScriptBlock>
						    </TableColumnItem>
					    </TableColumnItems>
				    </TableRowEntry>
			    </TableRowEntries>
            </TableControl>
		</View>
	</ViewDefinitions>
</Configuration>